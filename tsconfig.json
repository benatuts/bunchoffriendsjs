{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist/",
        "jsx": "react",
        "lib": ["es6", "dom"],
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}